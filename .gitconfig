[user]
	name = Sébastien Larivière
	email = sebastien@lariviere.me
[core]
	excludesfile = /Users/slariviere/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all

# Colors
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

# Highlight whitespace in diffs
[color]
    ui = true
[color "diff"]
    whitespace = red reverse
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

# URL shortcut
[url "git://github.com/"]
  insteadOf = github:
[url "git@bitbucket.org:slariviere/"]
  insteadOf = mybit:

# Alias
[alias]
    st = status
    cm = commit
    br = branch
    co = checkout
    df = diff
    ls = ls-files
    initt = init --template=/Users/slariviere/projets/gitconfig/template/
